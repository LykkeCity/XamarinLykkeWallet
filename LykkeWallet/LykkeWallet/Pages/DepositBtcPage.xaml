<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LykkeWallet.Pages.DepositBtcPage"
             Title="Deposit BTC">
  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="mailToolbarButton" Text="Mail" Icon="ic_email.png" Clicked="MailClicked"></ToolbarItem>
  </ContentPage.ToolbarItems>
  <StackLayout Padding="10,20,10,0">
    <Frame Padding="0,0,0,10">
      <Label Text="To deposit BTC into your trading wallet please use the following wallet address:" />
    </Frame>
    <Frame VerticalOptions="CenterAndExpand">
      <Image x:Name="qrImage" WidthRequest="300" />
    </Frame>
    <StackLayout Orientation="Horizontal">
      <Image />
      <StackLayout>
      
      </StackLayout>
      <Image />
    </StackLayout>
  </StackLayout>
</ContentPage>